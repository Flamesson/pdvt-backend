<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="pdvt-backend">
        <createTable tableName="CLIENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CLIENT"/>
            </column>
            <column name="CODE" type="VARCHAR(255)"/>
            <column name="STORAGE_NAME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="pdvt-backend">
        <createTable tableName="FILE_DTO">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_FILE_DTO"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="PATH" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="pdvt-backend">
        <createTable tableName="PDVT_FILE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PDVT_FILE"/>
            </column>
            <column name="CLIENT_ID" type="UUID"/>
            <column name="FILE_ID" type="UUID"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="pdvt-backend">
        <createIndex indexName="IDX_PDVT_FILE_CLIENT" tableName="PDVT_FILE">
            <column name="CLIENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CLIENT_ID" baseTableName="PDVT_FILE"
                                 constraintName="FK_PDVT_FILE_ON_CLIENT" referencedColumnNames="ID"
                                 referencedTableName="CLIENT"/>
    </changeSet>
    <changeSet id="5" author="pdvt-backend">
        <createIndex indexName="IDX_PDVT_FILE_FILE" tableName="PDVT_FILE">
            <column name="FILE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="FILE_ID" baseTableName="PDVT_FILE"
                                 constraintName="FK_PDVT_FILE_ON_FILE" referencedColumnNames="ID"
                                 referencedTableName="FILE_DTO"/>
    </changeSet>
</databaseChangeLog>